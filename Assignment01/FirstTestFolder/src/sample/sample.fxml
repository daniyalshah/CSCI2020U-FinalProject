<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="files_column" text="File" prefWidth="350">
                </TableColumn>


                <TableColumn fx:id="actual_class" text="Actual Class" prefWidth="120">
                </TableColumn>


                <TableColumn fx:id="spam_prob" text="Spam Probability" prefWidth="150">
                </TableColumn>
            </columns>
        </TableView>
    </center>

    <bottom>
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label text="Accuracy: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="accuracy_column" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Precision: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="precision_column" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            </children>
        </GridPane>
    </bottom>
</BorderPane>