<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="filesColumn" prefWidth="350" text="File">
                </TableColumn>


                <TableColumn fx:id="actualClassColumn" prefWidth="120" text="Actual Class">
                </TableColumn>


                <TableColumn fx:id="spamProb" prefWidth="150" text="Spam Probability">
                </TableColumn>
            </columns>
        </TableView>
    </center>

    <bottom>
        <GridPane alignment="CENTER_LEFT" hgap="10" prefHeight="64.0" prefWidth="622.0" style="-fx-background-color: #FFD6D1;" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label text="Accuracy: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="accuracyColumn" editable="false" prefHeight="26.0" prefWidth="110.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Precision: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="precisionColumn" editable="false" prefHeight="26.0" prefWidth="110.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </bottom>
</BorderPane>
